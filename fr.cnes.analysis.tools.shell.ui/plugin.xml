<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="fr.cnes.analysis.tools.shell.ui.handler.rule"
            name="Check Code">
         <state
               class="org.eclipse.ui.handlers.RegistryToggleState:true"
               id="org.eclipse.ui.commands.toggleState">
         </state>
      </command>
      <command
            id="fr.cnes.analysis.tools.shell.ui.handler.metric"
            name="Run Metrics">
         <state
               class="org.eclipse.ui.handlers.RegistryToggleState:true"
               id="org.eclipse.ui.commands.toggleState">
         </state>
      </command>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="resourceSelected">
         <with
               variable="selection">
            <iterate>
               <instanceof
                     value="org.eclipse.core.resources.IResource">
               </instanceof>
            </iterate>
         </with>
      </definition>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="fr.cnes.analysis.tools.shell.ui.handler.rule">
         <class
               class="fr.cnes.analysis.tools.ui.handler.RuleAnalysisHandler">
            <parameter
                  name="extensionId"
                  value="fr.cnes.analysis.tools.shell.analyzer.rule">
            </parameter>
            <parameter
                  name="fileExtensionBash"
                  value="sh">
            </parameter>
            <parameter
                  name="fileExtensionKsh"
                  value="ksh">
            </parameter>
         </class>
         <enabledWhen>
            <reference
                  definitionId="resourceSelected">
            </reference>
         </enabledWhen>
      </handler>
      <handler
            commandId="fr.cnes.analysis.tools.shell.ui.handler.metric">
         <class
               class="fr.cnes.analysis.tools.ui.handler.MetricAnalysisHandler">
            <parameter
                  name="extensionId"
                  value="fr.cnes.analysis.tools.shell.analyzer.metric">
            </parameter>
            <parameter
                  name="fileExtensionBash"
                  value="sh">
            </parameter>
         </class>
         <enabledWhen>
            <reference
                  definitionId="resourceSelected">
            </reference>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="fr.cnes.analysis.tools.shell.ui.preferencepage.main"
            class="fr.cnes.analysis.tools.ui.preferencepage.RulePreferencePage:shell.preferencePage"
            id="fr.cnes.analysis.tools.shell.ui.preferencepage.rule"
            name="Shell Rule Preferences">
      </page>
      <page
            category="fr.cnes.analysis.tools.ui.preferencepage.MainPreferencePage"
            class="fr.cnes.analysis.tools.ui.preferencepage.LanguagePreferencePage:shell.preferencePage"
            id="fr.cnes.analysis.tools.shell.ui.preferencepage.main"
            name="Shell">
      </page>
      <page
            category="fr.cnes.analysis.tools.shell.ui.preferencepage.main"
            class="fr.cnes.analysis.tools.ui.preferencepage.MetricPreferencePage:shell.preferencePage"
            id="fr.cnes.analysis.tools.shell.ui.preferencepage.metric"
            name="Shell Metric Preferences">
      </page>
   </extension>
   <extension
         point="fr.cnes.analysis.tools.preferencePages.utils">
      <preferencePageValue
            id="shell.preferencePage"
            metricExtensionId="fr.cnes.analysis.tools.shell.metric"
            metricPageId="fr.cnes.analysis.tools.shell.ui.preferencepage.metric"
            name="Shell"
            parentId="fr.cnes.analysis.tools.shell.ui.preferencepage.main"
            ruleExtensionId="fr.cnes.analysis.tools.shell.rule"
            rulePageId="fr.cnes.analysis.tools.shell.ui.preferencepage.rule">
      </preferencePageValue>
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <sourceProvider
            provider="fr.cnes.analysis.tools.ui.services.LanguageSourceProvider">
         <variable
               name="fr.cnes.analysis.tools.fortran90.ui.preferencepage.metric"
               priorityLevel="workbench">
         </variable>
         <variable
               name="fr.cnes.analysis.tools.fortran90.ui.preferencepage.rule"
               priorityLevel="workbench">
         </variable>
         <variable
               name="fr.cnes.analysis.tools.fortran90.ui.preferencepage.main"
               priorityLevel="workbench">
         </variable>
      </sourceProvider>
   </extension>

</plugin>
