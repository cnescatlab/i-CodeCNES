<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<groupId>fr.cnes.icode</groupId>
	<artifactId>parent</artifactId>
	<version>dev</version>
	<packaging>pom</packaging>

	<modules>
		<module>fr.cnes.icode.application</module>

        <module>fr.cnes.analysis.tools.analyzer</module>

		<module>shell-language</module>
		<module>shell-metrics</module>
		<module>shell-rules</module>

		<module>fortran77-language</module>
		<module>fortran77-metrics</module>
		<module>fortran77-rules</module>

		<module>fortran90-language</module>
		<module>fortran90-metrics</module>
		<module>fortran90-rules</module>

        <module>fr.cnes.analysis.tools.export.xml</module>
        <module>fr.cnes.analysis.tools.export.csv</module>
	</modules>

	<name>i-Code parent</name>
	<description>CNES app analyzing Fortran 77, Fortran 90 and Shell files.</description>

	<organization>
		<name>CNES</name>
		<url>https://cnes.fr/</url>
	</organization>
	<issueManagement>
		<system>GitHub</system>
		<url>https://github.com/lequal/i-CodeCNES/issues</url>
	</issueManagement>
	<ciManagement>
		<system>Travis-CI</system>
		<url>https://travis-ci.org/lequal/i-CodeCNES</url>
	</ciManagement>
	<scm>
		<url>https://github.com/lequal/i-CodeCNES</url>
	</scm>

	<licenses>
		<license>
			<name>GPL-3.0</name>
			<url>https://www.gnu.org/licenses/gpl-3.0.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<properties>
        <icode.version>3.2.0-dev</icode.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
	</properties>

	<dependencies>
		<!-- https://mvnrepository.com/artifact/commons-cli/commons-cli -->
		<dependency>
			<groupId>commons-cli</groupId>
			<artifactId>commons-cli</artifactId>
			<version>1.4</version>
		</dependency>
		<!-- https://mvnrepository.com/artifact/commons-io/commons-io -->
		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
			<version>2.6</version>
		</dependency>
	</dependencies>

</project>
